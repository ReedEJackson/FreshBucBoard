@model BucBoard.Models.AppointmentModel
@{
    ViewBag.Title = "Bucpointment";

    Layout = "~/Views/Shared/Popup.cshtml";
    List<SelectListItem> times = new List<SelectListItem>();
    foreach(SelectListItem item in ViewBag.Appts)
    {
        times.Add(item);
    }

}

<div class="text-center">
    @using (Html.BeginForm("ScheduleAppt", "Home", FormMethod.Post))
    {
        <img src="~/Images/ETSULogo.png" width="50" height="50" class="d-inline-block align-top" />
        <h2> @ViewBag.Message</h2>
        <br />
        <br />
        <label for="email"> ETSU E-mail: </label>
        <br />
        <div align="center">
            @Html.EditorFor(model => model.Sender, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Sender, "", new { @class = "text-danger" })
        </div>
        <br />
        <label for="stuId"> Student ID: </label>
        <br />
        <div align="center">
            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <br />
        <hr />
        <label for="time"> Select a time:</label>
        <br />
        <div align="center">
            @Html.DropDownListFor(model => model.ApptNumber, times)
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-default" onclick="CloseWindow()">Submit!</button>
        <br />
    }
</div>
<script>
    function CloseWindow() {

        window.close()
    }
</script>


