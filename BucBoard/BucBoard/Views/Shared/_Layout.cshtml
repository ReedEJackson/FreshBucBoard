<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BucBoard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (!Request.RawUrl.Contains("Dashboard"))
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    @if (BucGlobal.BucLoggedIn)
                    {
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Images/ETSULogo.png" width="50" height="50" class="d-inline-block align-top" />
                        </a>
                    }
                    else
                    {
                        <img src="~/Images/ETSULogo.png" width="50" height="50" class="d-inline-block align-top" />
                    }
                </div>
                <!-- Navbar components
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div>
                -->
            </div>
        </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <a href="@Url.Action("BucLogin", "BucLogin")" class="text-white">&copy;</a> 
                @DateTime.Now.Year - BucBoard Studios
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    </body>
</html>
